<% include partials/_header %>
<% include partials/_nav %>

<div class="container">

    <br>

    <title>
        <%= title %>
    </title>

    <h1>Edit your profile</h1>

    <br>

    <form action="/edit" method="post">

        <div class="form-group">
            <label for="displayName">Display Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="displayName" placeholder="Display Name"><%= currentUser.displayName || "" %></input>
            </div>
        </div>

        <div class="form-group">
            <label for="bio">Profile</label>
            <div class="col-sm-6">
                <textarea class="form-control" name="bio" placeholder="Tell us something about yourself!"><%= currentUser.bio || "" %></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-6">
                <button type="submit" value="Update" class="btn btn-primary btn-block">Update</button>
            </div>
        </div>

    </form>

</div>
<% include partials/_footer %>
